{
  "name": "@ventana/react",
  "version": "0.1.0",
  "repository": "https://github.com/BytexDigital/ventana.git",
  "author": "Elias Sebastian <hello@eliassebastian.io>",
  "description": "Popover component for React.",
  "keywords": [
    "react",
    "popover",
    "radix",
    "modal",
    "ventana"
  ],
  "scripts": {
    "build": "pnpm build:swc && pnpm types",
    "build:swc": "swc src -d dist --copy-files",
    "dev": "pnpm build:swc -w",
    "types": "tsc --emitDeclarationOnly",
    "lint": "TIMING=1 eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "clean": "rm -rf dist && rm -rf .turbo"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BytexDigital/ventana/issues"
  },
  "sideEffects": false,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@radix-ui/react-popover": "^1.0.6",
    "@radix-ui/react-slot": "^1.0.2"
  },
  "peerDependencies": {
    "react": "^18.0",
    "react-dom": "^18.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.66",
    "@types/node": "20.3.1",
    "@types/react": "^18.2.13",
    "chokidar": "^3.5.3",
    "eslint": "^8.43.0",
    "eslint-config-next": "^13.4.7",
    "typescript": "^5.1.3"
  },
  "packageManager": "pnpm@8.6.10"
}
